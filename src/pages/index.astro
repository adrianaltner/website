---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/Card.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <section class="hero">
        <h1>HERO</h1>
        <p>
          Welcome to the official <a href="https://astro.build/">Astro</a> blog starter
          template. This template serves as a lightweight, minimally-styled starting
          point for anyone looking to build a personal website, blog, or portfolio
          with Astro.
        </p>
      </section>
      <ul role="list" class="link-card-grid">
        <Card
          href="#"
          title="Documentation"
          body="Learn how Astro works and explore the official API docs."
        />
        <Card
          href="#"
          title="Integrations"
          body="Supercharge your project with new frameworks and libraries."
        />
        <Card
          href="#"
          title="Themes"
          body="Explore a galaxy of community-built starter themes."
        />
        <Card
          href="#"
          title="Community"
          body="Come say hi to our amazing Discord community. ❤️"
        />
      </ul>
    </main>
    <Footer />
  </body>
</html>

<style>
  .hero {
    margin-bottom: 2rem;
    border: 1px solid rgba(0, 157, 224, 0.5);
    background: rgba(178, 229, 250, 0.5);
    padding: 1rem;
    border-radius: 10px;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
